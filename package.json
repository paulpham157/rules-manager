{
  "name": "ai-rules",
  "version": "0.1.0",
  "description": "A TypeScript CLI tool for managing AI IDE rules across different projects and teams",
  "main": "dist/index.js",
  "bin": {
    "ai-rules": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:all": "npm run build && npm run test",
    "test:unit": "jest --config jest.unit.config.js",
    "test:e2e": "jest tests/e2e"
  },
  "keywords": [
    "ai",
    "ide",
    "rules",
    "cursor",
    "windsurf",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "arg": "^5.0.2",
    "args": "^5.0.3",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "nock": "^13.3.8",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
